generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id               @default(uuid())
  login         String        @unique
  name          String
  password      String        

  createdAt     DateTime      @default(now())   @map("created_ad")
  updatedAt     DateTime      @updatedAt        @map("updated_ad")

  @@map("users")
}
